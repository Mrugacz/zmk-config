#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT 0
#define CORNE 1
#define LOWER 2
#define RAISE 3
#define CLOW 4
#define CRAI 5

&mt {
    tapping-term-ms = <400>;
    flavor = "balanced";
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESC     &kp N1    &kp N2    &kp N3      &kp N4  &kp N5  &kp N6              &kp N7     &kp N8      &kp N9          &kp N0    &kp GRAVE
&kp TAB     &kp Q     &kp W     &kp E       &kp R   &kp T   &kp Y               &kp U      &kp I       &kp O           &kp P     &kp MINUS
&kp LSHFT   &kp A     &kp S     &kp D       &kp F   &kp G   &kp H               &kp J      &kp K       &kp L           &kp SEMI  &kp SQT
&kp LCTRL   &kp Z     &kp X     &kp C       &kp V   &kp B   &kp N               &kp M      &kp COMMA   &kp DOT         &kp FSLH  &kp RSHFT
&kp BSLH    &kp LBKT  &kp RBKT  &kp EQUAL                   &mt LGUI BACKSLASH  &kp SPACE  &kp RETURN  &mt RGUI EQUAL
&lt 1 LBKT  &kp DEL   &kp BSPC  &lt 2 RBKT                  &kp LALT            &kp HOME   &kp END     &kp RALT
            >;
        };

        lower_layer {
            bindings = <
&kp F1        &kp F2  &kp F3  &kp F4      &kp F5  &kp F6  &kp F7        &kp F8    &kp F9  &kp F10       &kp F11  &kp F12
&out OUT_TOG  &trans  &trans  &trans      &trans  &trans  &trans        &trans    &trans  &trans        &trans   &trans
&trans        &trans  &trans  &trans      &trans  &trans  &kp LEFT      &kp DOWN  &kp UP  &kp RIGHT     &trans   &trans
&trans        &trans  &trans  &trans      &trans  &trans  &trans        &trans    &trans  &trans        &trans   &trans
&trans        &trans  &trans  &bt BT_CLR                  &trans        &trans    &trans  &trans
&trans        &trans  &trans  &tog 3                      &bt BT_SEL 0  &trans    &trans  &bt BT_SEL 1
            >;
        };

        raise_layer {
            bindings = <
&kp F1        &kp F2  &kp F3  &kp F4      &kp F5  &kp F6  &kp F7        &kp F8    &kp F9  &kp F10       &kp F11  &kp F12
&out OUT_TOG  &trans  &trans  &trans      &trans  &trans  &trans        &trans    &trans  &trans        &trans   &trans
&trans        &trans  &trans  &trans      &trans  &trans  &kp LEFT      &kp DOWN  &kp UP  &kp RIGHT     &trans   &trans
&trans        &trans  &trans  &trans      &trans  &trans  &trans        &trans    &trans  &trans        &trans   &trans
&trans        &trans  &trans  &bt BT_CLR                  &trans        &trans    &trans  &trans
&tog 3        &trans  &trans  &trans                      &bt BT_SEL 0  &trans    &trans  &bt BT_SEL 1
            >;
        };

        home_row_mods {
            bindings = <
&trans  &trans          &trans      &trans       &trans       &trans      &trans      &trans       &trans       &trans      &trans              &trans
&trans  &trans          &trans      &trans       &trans       &trans      &trans      &trans       &trans       &trans      &trans              &trans
&trans  &mt LEFT_WIN A  &mt LALT S  &mt LSHFT D  &mt LCTRL F  &mt HOME G  &mt END H   &mt RCTRL J  &mt RSHFT K  &mt LALT L  &mt RGUI SEMICOLON  &trans
&trans  &trans          &trans      &trans       &trans       &mt RALT B  &mt RALT N  &trans       &trans       &trans      &trans              &trans
&trans  &trans          &trans      &trans                                &trans      &trans       &trans       &trans
&trans  &trans          &trans      &trans                                &trans      &trans       &trans       &trans
            >;
        };
    };
};
